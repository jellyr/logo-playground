{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "App config schema",
    "type": "object",
    "properties": {
        "services": {
            "description": "Api endpoint access options",
            "type": "object",
            "properties": {
                "appApiUrl": {
                    "description": "Url of endpoint",
                    "type": "string"
                },
                "imgurServiceUrl": {
                    "description": "Url of imgur upload API",
                    "type": "string"
                },
                "imgurServiceClientID": {
                    "description": "ClientID to use with imgurAPI",
                    "type": "string"
                }
            },
            "required": [
                "appApiUrl",
                "imgurServiceUrl",
                "imgurServiceClientID"
            ]
        }
    },
    "required": [
        "services"
    ],
    "definitions": {}
}