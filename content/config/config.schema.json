{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "App config schema",
  "type": "object",
  "properties": {
    "services": {
      "description": "Api endpoint access options",
      "type": "object",
      "properties": {
        "appApiUrl": {
          "description": "Url of endpoint",
          "type": "string"
        },
        "imgurServiceUrl": {
          "description": "Url of imgur upload API",
          "type": "string"
        },
        "imgurServiceClientID": {
          "description": "ClientID to use with imgurAPI",
          "type": "string"
        },
        "googleClientId": {
          "description": "ClientID to use with Google API",
          "type": "string"
        },
        "googleAnalyticsTrackingId": {
          "description": "TrackingID to use with Google Analytics API",
          "type": "string"
        },
        "googleDriveGalleryFilename": {
          "description": "Filename to use with Google Drive to store personal gallery",
          "type": "string"
        }
      },
      "required": [
        "appApiUrl",
        "imgurServiceUrl",
        "imgurServiceClientID",
        "googleClientId",
        "googleAnalyticsTrackingId",
        "googleDriveGalleryFilename"
      ]
    }
  },
  "required": ["services"],
  "definitions": {}
}
