<!DOCTYPE html>
<html>

<head>
    <title>Loading...</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">

    <link href="favicon.ico" rel="icon" type="image/x-icon" />

    <link href="https://fonts.googleapis.com/css?family=Inconsolata:400,700&amp;subset=latin-ext" rel="stylesheet"> 
</head>
<%
    var packageJson = require('../../package.json');
%>
<body>
    <script type="text/javascript">
        var themeName = "default";
        try{
            window.appThemeNameLocalStorageKey = '<%= packageJson.name %>-<%= packageJson.version %>-theme';
            console.log('storagekey', window.appThemeNameLocalStorageKey);
            var storedTheme = window.localStorage.getItem(window.appThemeNameLocalStorageKey);
            if (storedTheme){
                themeName = JSON.parse(storedTheme);
            }
        } 
        catch(ex){
        }
        console.log('applying theme ', themeName);
        document.write('<link href="css/bootstrap/bootstrap.' + themeName + '.min.css?1" rel="stylesheet">');
    </script>

   <div id="app-container">
   </div>

   <link href="css/golden-layout/goldenlayout-base.css" rel="stylesheet">
   <link href="css/golden-layout/goldenlayout-light-theme.css" rel="stylesheet">

   <% for (var css in htmlWebpackPlugin.files.css) { %>
    <link href="<%= htmlWebpackPlugin.files.css[css] %>" rel="stylesheet">
   <% } %>
   <% for (var chunk in htmlWebpackPlugin.files.chunks) { %>
    <script src="<%= htmlWebpackPlugin.files.chunks[chunk].entry %>"></script>
   <% } %>

   <script>
     app.run();
   </script>   
</body>
</html>